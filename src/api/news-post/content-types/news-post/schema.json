{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "news-post",
    "pluralName": "news",
    "displayName": "News",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "header": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "blocks",
      "required": true
    },
    "cover_img": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "date": {
      "type": "datetime"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "hiyaalu",
        "siyaasee",
        "beyru_dhuniye",
        "islam_dheen",
        "kulhivaru",
        "vaahaka"
      ]
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment"
    },
    "related_news": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-post.news-post"
    },
    "views": {
      "type": "integer"
    }
  }
}
