    "position": {
      "type": "string"
    },
    "news": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-post.news-post",
      "mappedBy": "author"
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    }
